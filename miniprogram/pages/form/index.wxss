/* pages/form/index.wxss */
page {
  height: 100%;
}

.form {
  padding: 20rpx;
  height: 100%;
  box-sizing: border-box;
  /* margin-bottom: 400rpx; */
}

.form .head {
  padding: 20rpx 0;
}

.avatar-img {
  width: 90rpx;
  height: 90rpx;
}

.avatar-img image {
  width: 100%;
}

.avatar {
  display: flex;
}

.nickName {
  flex: 1;
  padding: 0 20rpx;
}

.nickName .name,
.nickName .user-id {
  line-height: 45rpx;
}

.user-id {
  font-size: 28rpx;
  color: #6b6b6b;
}

.form-list {
  height: calc(100% - 130rpx - 214rpx);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.form-item {
  display: flex;
  height: 64rpx;
  padding: 8rpx 0;
}

.form-item .form-item-title {
  line-height: 62rpx;
  width: 70rpx;
  position: absolute;
}

.form-item .form-item-content {
  flex: 1;
  margin-left: 85rpx;
  border-bottom: 1px solid #ddd;
  padding: 4px 0;
  font-size: 32rpx;
  color: #333;
  position: absolute;
  width: calc(100% - 190rpx);
}

.form .submit-btn {
  /* width: calc(100% - 40rpx); */
  width: 100%;
  /* position: fixed; */
  bottom: 20rpx;
  height: 200rpx;
  display: flex;
  margin-top: 120rpx;
  flex-direction: column;
  justify-content: space-around;
}

.submit-btn button {
  width: 100%;
}

.cc {
  margin-top: 20rpx;
}

.form-box {
  width: 100%;
  display: flex;
}

.form-box-box {
  flex: 1;
  position: relative;
  line-height: 64rpx;
}

.form-box-box>input {
  height: 62rpx;
  margin-left: 8rpx;
  border-bottom: 1px solid #ddd;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.tow {
  display: block;
}

.form-input {
  width: calc(100% - 200rpx);
  padding: 0 5px;
  box-sizing: border-box;
}

.form-t {
  float: left;
}

.form-T {
  display: inline-block;
  width: 375px;
}

.T {
  line-height: 62rpx;
}

.unit {
  position: absolute;
  right: 20rpx;
  top: 0;
  font-size: 24rpx;
  width: 70rpx;
  text-align: center;
}

.cccc {
  font-size: 24rpx;
}

.voiceBox {
  display: flex;
  position: relative;
}
.voiceBox .voice {
  width: 100%;
}
.voiceBox .btn-style {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  bottom: -100rpx;
  left: 50%;
  margin-left: -40rpx;
}
.voice {
  margin-top: 30rpx;
  border:1rpx solid #ccc;
  width: 350rpx;
}