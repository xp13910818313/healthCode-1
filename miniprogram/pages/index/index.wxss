.list {
  width: calc((100% - 52rpx) / 3);
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid #999;
  margin: 0 20rpx 20rpx 0;
  float: left;
  border-radius: 10rpx;
}

.list:nth-child(3n) {
  margin-right: 0;
}

.btn {
  position: absolute;
  bottom: 100rpx;
  width: calc(100% - 120rpx);
}