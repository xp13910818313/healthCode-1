page {
  width: 100%;
  height: 100%;
}

.clearfix::after {
  content: '';
  display: block;
  clear: both;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.title {
  font-size: 50rpx;
  font-weight: 700;
}

.index {
  box-sizing: border-box;
  padding: 60rpx;
  width: 100%;
  height: 100%;
  position: relative;
}

.list-box {
  width: 100%;
  margin-top: 120rpx;
}

.list {
  width: calc((100% - 52rpx) / 3);
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid #999;
  margin: 0 20rpx 20rpx 0;
  float: left;
  border-radius: 10rpx;
}

.list:nth-child(3n) {
  margin-right: 0;
}

.btn {
  position: absolute;
  bottom: 100rpx;
  width: calc(100% - 120rpx);
}
.btn-box{
  background:linear-gradient(70deg,#11998e,#1dc05b);
  color: #fff;
}
.mine{
  text-align: center;
  color: #6b6b6b;
  font-size: 14px;
  text-decoration: underline;
  padding: 20px 0;
}