page {
  width: 100%;
  height: 100%;
}

.clearfix::after {
  content: '';
  display: block;
  clear: both;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.title {
  font-size: 50rpx;
  font-weight: 700;
}

.index {
  box-sizing: border-box;
  padding: 60rpx;
  width: 100%;
  height: 100%;
  position: relative;
}

.list-box {
  width: 100%;
  margin-top: 120rpx;
}
